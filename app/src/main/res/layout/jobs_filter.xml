<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--厂站类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_stationType"
            style="@style/style_item_fault_job_text"
            android:text="厂站类型"/>
        <Spinner
            android:id="@+id/sp_stationType"
            style="@style/style_item_fault_job_spn"
            />
    </LinearLayout>
    <!--电压等级-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_vol"
            style="@style/style_item_fault_job_text"
            android:text="电压等级"/>
        <Spinner
            android:id="@+id/sp_vol"
            style="@style/style_item_fault_job_spn" />
    </LinearLayout>
    <!--装置类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_deviceType"
            style="@style/style_item_fault_job_text"
            android:text="装置类型"/>
        <Spinner
            android:id="@+id/sp_deviceType"
            style="@style/style_item_fault_job_spn"/>
    </LinearLayout>
    <!--装置套别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_deviceSet"
            style="@style/style_item_fault_job_text"
            android:text="装置套别"/>
        <Spinner
            android:id="@+id/sp_deviceSet"
            style="@style/style_item_fault_job_spn"/>
    </LinearLayout>

    <!--处理情况？过程？-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_operation"
            style="@style/style_item_fault_job_text"
            android:text="处理情况"/>
        <Spinner
            android:id="@+id/sp_operation"
            style="@style/style_item_fault_job_spn"/>
    </LinearLayout>



</LinearLayout>